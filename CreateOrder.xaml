        <TextBox x:Name="customerlastnametb" HorizontalAlignment="Left" Margin="160,36,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <Label Content="Отчество" HorizontalAlignment="Left" Margin="320,10,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="castomerpatronymictb" HorizontalAlignment="Left" Margin="320,36,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
